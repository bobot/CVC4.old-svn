#
# Option specification file for CVC4
# See src/options/base_options for a description of this file format
#

module ARITH "theory/arith/options.h" Arithmetic

option pivotRule --pivot-rule=RULE ArithPivotRule :handler CVC4::theory::arith::stringToArithPivotRule :default MINIMUM :handler-include "theory/arith/options_handlers.h" :include "theory/arith/arith_pivot_rule.h"
 change the pivot rule (see --pivot-rule help)
option arithPivotThreshold arith-pivot-threshold --pivot-threshold=N uint16_t :default 16
 sets the number of heuristic pivots per variable per simplex instance
option arithPropagateMaxLength arith-propagate-max-length --prop-row-length=N uint16_t :default 16
 sets the maximum row length to be used in propagation

option arithPropagation arith-propagation /--disable-arithmetic-propagation bool :default true
 use arithmetic propagation
/turns on arithmetic propagation

# Whether to split (= x y) into (and (<= x y) (>= x y)) in
# arithmetic preprocessing.
option arithRewriteEq arith-rewrite-eq /--disable-arith-rewrite-equalities bool :default true
 preprocess arithmetic equalities into a conjuction of inequalities
/turns off the preprocessing rewrite turning equalities into a conjunction of inequalities

option dioSolver dio-solver /--disable-dio-solver bool :default true
 use Linear Diophantine Equation solver (Griggio, JSAT 2012)
/turns off Linear Diophantine Equation solver (Griggio, JSAT 2012)

endmodule
