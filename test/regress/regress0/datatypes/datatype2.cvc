% EXPECT: valid

DATATYPE
  nat = succ(pred : nat) | zero,
  list = cons(car : tree, cdr : list) | null,
  tree = node(data : nat, children : list) | leaf
END;

x : nat;
y : list;
z : tree;

ASSERT x = succ(zero);
ASSERT z = IF is_cons(y) THEN car(y) ELSE node(x, null) ENDIF;

QUERY (NOT is_cons(y)) => pred(data(z)) = zero;
